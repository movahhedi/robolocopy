{
	"name": "robolocopy",
	"version": "0.1.0",
	"description": "A cross-platform file copying utility with glob pattern exclusions",
	"packageManager": "yarn@4.7.0",
	"type": "module",
	"main": "./dist/index.js",
	"bin": {
		"robolocopy": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=14.16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"lint": "eslint src --ext .ts",
		"prepublishOnly": "yarn build",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"copy",
		"robocopy",
		"file",
		"directory",
		"cli",
		"glob",
		"exclude"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.4.1",
		"commander": "^13.1.0",
		"fast-glob": "^3.3.3",
		"fs-extra": "^11.3.0",
		"minimatch": "^10.0.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.13.10",
		"@vitest/coverage-v8": "^3.0.8",
		"eslint": "^9.22.0",
		"typescript": "^5.8.2",
		"vitest": "^3.0.8"
	}
}
